<Window x:Class="KikeletPanzio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KikeletPanzio"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="500"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Width" Value="150"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl>
            <TabItem Header="Szobák">
                <ListView ItemsSource="{Binding Szobák}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Szobaszám" DisplayMemberBinding="{Binding Szobaszam}" />
                            <GridViewColumn Header="Férőhelyek száma" DisplayMemberBinding="{Binding Ferohely}" />
                            <GridViewColumn Header="Aktuális ár" DisplayMemberBinding="{Binding AktualisAr}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Ügyfelek felvétele">
                <StackPanel>
                    <TextBox x:Name="TbxAzonosito"/>
                    <DatePicker x:Name="DtpSzulnap"  Margin="5"/>
                    <TextBox x:Name="TbxEmail"/>
                    <CheckBox x:Name="CbxIsVIP" Content="VIP" Margin="5"/>
                    <Button x:Name="BtnUgyfelHozzaad" Content="Ügyfél hozzáadása" Click="BtnUgyfelHozzaad_Click"/>
                    <ListView ItemsSource="{Binding Ugyfelek}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" />
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Nev}" />
                                <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" />
                                <GridViewColumn Header="VIP" DisplayMemberBinding="{Binding IsVIP}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </TabItem>
            <TabItem Header="Foglalások">
                <StackPanel>
                    <TextBox x:Name="TbxUjAzonosito"/>
                    <DatePicker x:Name="DtpUjSzulnap" Margin="5"/>
                    <TextBox x:Name="TbxUjEmail"/>
                    <CheckBox x:Name="CbxUjIsVIP" Content="VIP" Margin="5"/>
                    <Button x:Name="BtnUjUgyfelHozzaad" Content="Új ügyfél hozzáadása" Click="BtnUjUgyfelHozzaad_Click"/>
                    <ListView ItemsSource="{Binding Ugyfelek}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" />
                                <GridViewColumn Header="Név" DisplayMemberBinding="{Binding Nev}" />
                                <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" />
                                <GridViewColumn Header="VIP" DisplayMemberBinding="{Binding IsVIP}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>